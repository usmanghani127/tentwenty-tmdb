{
  "name": "tmdb",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "lint": "eslint .",
    "lint-staged": "lint-staged",
    "prettier": "prettier --check .",
    "tsc": "tsc -p ./tsconfig.json --noEmit",
    "start": "yarn clean:watchman; react-native start --reset-cache",
    "detox:build:ios": "detox build --configuration ios.sim.release",
    "detox:test:ios": "detox test --configuration ios.sim.release",
    "detox:build:android": "detox build --configuration android.emu.release",
    "detox:test:android": "detox test --configuration android.emu.release",
    "clean:watchman": "watchman watch-del-all",
    "clean:gradle": "cd android; ./gradlew :app:clean",
    "clean:interactive": "react-native clean-project",
    "clean:all": "react-native clean-project-auto; rm -rf yarn.lock, rm -rf ios/Podfile.lock; yarn install:all",
    "install:pods": "pod install --project-directory=ios --verbose",
    "install:all": "yarn install; yarn install:pods",
    "release:apk": "cd android; ./gradlew :app:assembleRelease",
    "debug:apk": "cd android; ./gradlew :app:assembleDebug",
    "release:aab": "cd android; ./gradlew :app:bundleRelease",
    "prepare": "husky",
    "build:ios": "react-native bundle --entry-file='index.js' --bundle-output='./ios/main.jsbundle' --dev=false --platform='ios'"
  },
  "dependencies": {
    "@react-navigation/bottom-tabs": "6.6.1",
    "@react-navigation/native": "6.1.17",
    "@react-navigation/native-stack": "6.9.26",
    "@reduxjs/toolkit": "2.2.3",
    "react": "18.2.0",
    "react-hook-form": "7.51.2",
    "react-if": "4.1.5",
    "react-native": "0.73.6",
    "react-native-keyboard-aware-scroll-view": "0.9.5",
    "react-native-localization": "2.3.2",
    "react-native-paper": "5.12.3",
    "react-native-safe-area-context": "4.9.0",
    "react-native-screens": "3.30.1",
    "react-native-splash-screen": "3.3.0",
    "react-native-svg": "15.1.0",
    "react-native-svg-transformer": "1.3.0",
    "react-native-vector-icons": "10.0.3",
    "react-redux": "9.1.0",
    "styled-components": "6.1.12"
  },
  "devDependencies": {
    "@babel/core": "7.24.4",
    "@babel/preset-env": "7.24.4",
    "@babel/runtime": "7.24.4",
    "@react-native/babel-preset": "0.73.21",
    "@react-native/eslint-config": "0.73.2",
    "@react-native/metro-config": "0.73.5",
    "@react-native/typescript-config": "0.73.1",
    "@types/color": "3.0.6",
    "@types/jest": "29.5.12",
    "@types/node": "20.12.5",
    "@types/react": "18.2.6",
    "@types/react-native-vector-icons": "6.4.18",
    "@types/react-test-renderer": "18.0.0",
    "@types/styled-components-react-native": "5.2.5",
    "babel-jest": "29.6.3",
    "babel-plugin-styled-components": "2.1.4",
    "detox": "20.20.0",
    "eslint": "8.19.0",
    "husky": "9.0.11",
    "jest": "29.6.3",
    "lint-staged": "15.2.2",
    "prettier": "2.8.8",
    "react-native-clean-project": "4.0.3",
    "react-native-dotenv": "3.4.11",
    "react-test-renderer": "18.2.0",
    "ts-jest": "29.1.2",
    "typescript": "5.0.4"
  },
  "engines": {
    "node": ">=18"
  },
  "resolutions": {
    "@types/react": "18.2.6",
    "styled-components": "^6"
  }
}
